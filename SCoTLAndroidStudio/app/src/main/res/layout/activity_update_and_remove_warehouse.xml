<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Atualizar Galpão"
                android:textColor="#F5F5DC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="ID:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_id_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Nome do estado:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_state_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="text"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nome cidade:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_city_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="text"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nome rua:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_street_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="text"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Número residencial:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_number_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="number"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="CPF dono:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_owner_cpf_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="number"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Nome dono:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_owner_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="text"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Telefone:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_cellphone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="number"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Data de nascimento:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_birth_date_edit_text"
                    style="?android:spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="01 JAN 2000"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Data de fim:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_update_warehouse_end_date_edit_text"
                    style="?android:spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="01 JAN 2000"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/system_client_update_warehouse_clear_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpar"
                    android:layout_marginRight="170dp"/>

                <Button
                    android:id="@+id/system_client_update_warehouse_remove_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMOVER"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/system_client_update_warehouse_update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container"
                android:layout_marginTop="20dp"
                android:background="#A0522D"
                android:paddingLeft="10dp"
                android:text="ATUALIZAR"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

