<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="Registrar Funcionário"
                android:textColor="#F5F5DC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="CPF:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_register_employee_cpf_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="number"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Nome:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_register_employee_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="textPersonName"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Telefone:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/system_client_register_employee_cellphone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:inputType="phone"
                    android:textColor="#F5F5DC"
                    android:textColorHint="#BDB76B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Data de nascimento:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/system_client_register_employee_pick_date_button"
                    style="?android:spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="01 JAN 2000"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Data de contratação:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/system_client_register_employee_pick_hiring_date_button"
                    style="?android:spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="01 JAN 2000"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Profissão:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/system_client_register_employee_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#00000000">

                <TextView
                    android:id="@+id/system_client_register_employee_work_local_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="Local de trabalho:"
                    android:textColor="#F5F5DC"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/system_client_register_employee_work_local_id_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#F5F5DC"
                    android:gravity="center_horizontal"
                    android:hint="Id do local de trabalho"
                    android:inputType="number"
                    android:textColor="#F5F5DC"
                    android:textColorHint="@color/white"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </LinearLayout>

            <Button
                android:id="@+id/system_client_register_employee_clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpar" />

            <Button
                android:id="@+id/system_client_register_employee_register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container"
                android:layout_marginTop="20dp"
                android:background="#A0522D"
                android:paddingLeft="10dp"
                android:text="@string/cadastrar"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

